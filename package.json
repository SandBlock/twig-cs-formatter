{
  "name": "twig-cs-formatter",
  "displayName": "Twig CS Formatter",
  "publisher": "SanderVerschoor",
  "description": "A formatter for twig files using prettier-plugin-twig-melody",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/SandBlock/vscode-rsync-extended"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "extensions": [".twig", ".html.twig"]
      }
    ],
    "commands": [
      {
        "command": "twig-cs-formatter.formatDocument",
        "title": "Format Twig Document"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-twig-melody": "^0.4.6"
  },
  "devDependencies": {
    "@types/prettier": "^3.0.0",
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
